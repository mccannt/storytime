# StoryTime Production Environment Configuration

# Server Configuration
PORT=8080
NODE_ENV=production

# Admin Authentication
# IMPORTANT: Change these values for production!
ADMIN_PASSWORD=change_this_secure_password_123
JWT_SECRET=change_this_super_secure_jwt_secret_key_in_production

# Database
DB_PATH=./database/pdfs.db

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# CORS - Update with your actual domain
FRONTEND_URL=https://your-domain.com

# Optional: Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d